{
  "id": null,
  "uid": "kafka-message-flow",
  "title": "Kafka Message Flow Monitoring",
  "tags": ["kafka", "monitoring", "pipeline"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },

  "templating": {
    "list": [
      {
        "name": "topic",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(kafka_topic_partition_current_offset, topic)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      },
      {
        "name": "consumer_group",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(kafka_consumergroup_lag, consumergroup)",
        "refresh": 1,
        "multi": true,
        "includeAll": true,
        "allValue": ".*"
      }
    ]
  },

  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "1분 평균 Producer TPS",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 17, "w": 24, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kafka_topic_partition_current_offset{topic=~\"$topic\"}[1m]))",
          "legendFormat": "Producer TPS"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops/sec" }
      }
    },

    {
      "id": 2,
      "type": "timeseries",
      "title": "Kafka 컨슈머 그룹 Lag",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 9 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(kafka_consumergroup_lag{topic=~\"$topic\", consumergroup=~\"$consumer_group\"}) by (consumergroup)",
          "legendFormat": "{{consumergroup}}"
        }
      ]
    },

    {
      "id": 3,
      "type": "timeseries",
      "title": "처리 지연 비율 (%)",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 26, "w": 24, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(kafka_consumergroup_lag{topic=~\"$topic\", consumergroup=~\"$consumer_group\"}) / ( sum(kafka_consumergroup_lag{topic=~\"$topic\", consumergroup=~\"$consumer_group\"}) + sum(rate(kafka_consumergroup_current_offset{topic=~\"$topic\", consumergroup=~\"$consumer_group\"}[1m])) * 60 )",
          "legendFormat": "Lag Ratio (%)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 3 },
              { "color": "orange", "value": 7 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },

    {
      "id": 4,
      "type": "timeseries",
      "title": "메시지 처리 효율 (Producer vs Consumer TPS)",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 9, "w": 24, "h": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kafka_topic_partition_current_offset{topic=~\"$topic\"}[1m]))",
          "legendFormat": "Producer TPS"
        },
        {
          "refId": "B",
          "expr": "sum(rate(kafka_consumergroup_current_offset{topic=~\"$topic\", consumergroup=~\"$consumer_group\"}[1m]))",
          "legendFormat": "Consumer TPS"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops/sec" }
      }
    }
  ]
}
